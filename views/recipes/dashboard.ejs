<%- include('../partials/_head') %>
<%- include('../partials/_header') %>

<div class="container">
  <div class="row">
      <h3>My Recipes</h3>
      <% if(recipes.length < 1) { %>
        <span class="text-lighten-4">Recipes you've created will show here.</span>
      <% } %>
  </div>

  <div class="row">
    <% for(recipe of recipes) { %>
      <div class="col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <img src="img/potatoes.jpeg">
            <a class="btn-floating halfway-fab waves-effect waves-light"><i class="material-icons">shopping_cart</i></a>
          </div>
          <div class="card-content">
              <span class="card-title"><%= recipe.title %></span>
              <p><%= recipe.description %></p>
              <p>Cooking time: <%= recipe.cookTime %> min.</p>
          </div>
          <div class="card-action">
            <a href="/recipes/<%= recipe._id %>">Read More</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <div class="divider"></div>

  <div class="row">
      <h3>Favorited Recipes</h3>
      <% if(favorites.length < 1) { %>
        <span class="text-lighten-4">Recipes you've favorited will show here.</span>
      <% } %>
  </div>
  <div class="row">
    <% if(favorites.length > 0) { %>
      <% for(recipe of favorites) { %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img src="img/potatoes.jpeg">
              <form action="/recipes/unfavorite/<%= recipe._id %>?_method=PUT" method="POST" >
                <button class="btn-floating halfway-fab waves-effect waves-light" type="submit"><i class="material-icons">favorite</i></button>
              </form>
            </div>
            <div class="card-content">
                <span class="card-title"><%= recipe.title %></span>
              <p>I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
      <% } %>
    <% } %>
  </div>
  <div class="fixed-action-btn">
      <a href="/recipes/new" class="btn-floating btn-large waves-effect waves-light red">
          <i class="material-icons">add</i>
      </a>
  </div>
</div><!-- container -->
<%- include('../partials/_footer') %>
