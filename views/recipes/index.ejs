<%- include('../partials/_head') %>
<%- include('../partials/_header') %>
<div class="container">
<div class="row">
    <h3>All Recipes</h3>
</div>
<div class="row">
  <% for(recipe of recipes) { %>
    <% console.log(recipe) %>
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image">
          <img src="img/potatoes.jpeg">
          <a class="btn-floating halfway-fab waves-effect waves-light"><i class="material-icons">shopping_cart</i></a>
        </div>
        <div class="card-content">
            <span class="card-title"><%= recipe.title %></span>
            <p class="card-line"><%= recipe.description %></p>
            <div class="card-line"><i class="material-icons">schedule</i><%= recipe.cookTime %> min.</div>
            <div class="chip">
              <img src="img/potatoes.jpeg" alt="creator">
              <%= recipe.user.userName %>
            </div>
        </div>
        <div class="card-action">
          <a href="/recipes/<%= recipe._id %>">Read More</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
</div><!-- container -->
<%- include('../partials/_footer') %>